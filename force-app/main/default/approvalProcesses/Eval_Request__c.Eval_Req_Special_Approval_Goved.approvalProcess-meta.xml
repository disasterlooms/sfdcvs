<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Opportunity_Name__c</field>
        <field>Eval_Type__c</field>
        <field>Reason_for_Request__c</field>
        <field>Eval_Notes__c</field>
        <field>Special_Instructions__c</field>
        <field>Opportunity_Amount__c</field>
        <field>Product_Name__c</field>
        <field>Quantity__c</field>
        <field>Billing_Contact_Name__c</field>
        <field>Shipping_Account_Name_del__c</field>
        <field>Shipping_Contact_Name__c</field>
        <field>Expected_Receive_Date__c</field>
        <field>Name</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Director_Approved_VP_Sales_Awaiting</name>
                <type>Alert</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <description>Sends a request to Sales director for first approval</description>
        <label>Sales Director</label>
        <name>Sales_Director</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>brian.igoe@viewsonic.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>Unanimous</whenMultipleApprovers>
        </assignedApprover>
        <description>Sends to VP Operations after Director Approval</description>
        <entryCriteria>
            <formula>(($User.ManagerId == &apos;005A0000000TGUf&apos; || 
$User.Id == &apos;005A0000002lzcsIAA&apos; || 
$User.ManagerId == &apos;005A0000000TGUfIAO&apos; || 
$User.Id == &apos;005A0000002lzcs&apos;
|| $User.Alias = &apos;admin&apos; || $User.Alias == &apos;bcoll&apos;) &amp;&amp; $UserRole.Name != &apos;LA Sales TM&apos;) &amp;&amp; Large_Format_Request__c == true</formula>
        </entryCriteria>
        <label>VP of Operations</label>
        <name>VP_of_Operations</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>Eval request approval from for Waive agreement. Okay when Education/Enterprise (Large)) and Govt. VP and then notifies operations sales for GovEd Special Approval on large format displays that waives the agreement requirement

Canada Uses this Process because it does not have an Agreement</description>
    <emailTemplate>Product_Request/End_User_Evaluation_Request</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>$UserRole.Name != &apos;ViewSonic Corporation Partner User&apos;&amp;&amp;
 text(Approval_Status__c) != &apos;Approved&apos;&amp;&amp;

 text( Eval_Type__c )=&apos;End-User/Reseller/Disty Eval&apos;&amp;&amp;
  ((text(Billing_Contact_Name__r.Account.Type )=&apos;End User&apos;&amp;&amp; GovEd_Account_Waive_Agreement__c =true)  || $User.Country = &apos;Canada&apos;)</formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Change_to_Approved_Status</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>EvalProcessW_Shipping</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Notified_Sales_Opp</name>
            <type>Task</type>
        </action>
        <action>
            <name>Notifies_Sales_Ops</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Unlocked_for_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Change_to_Rejected_Status</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Eval_Process_Submission</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Notifies_Sales_RepRejected</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Rejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Unlocked_for_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Approval_Process_Special_Waiver</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Change_to_Pending_Status</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>EvalProcessStage</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Locked_for_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>No Eval Agreement</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>2</processOrder>
    <recallActions>
        <action>
            <name>Approval_Status_Blank</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Eval_Process_Submission</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Unlocked_for_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
