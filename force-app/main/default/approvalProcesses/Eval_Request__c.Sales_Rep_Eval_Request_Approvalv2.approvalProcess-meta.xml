<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Opportunity_Name__c</field>
        <field>Eval_Type__c</field>
        <field>Reason_for_Request__c</field>
        <field>Special_Instructions__c</field>
        <field>Opportunity_Amount__c</field>
        <field>Product_Name__c</field>
        <field>Quantity__c</field>
        <field>Billing_Contact_Name__c</field>
        <field>Shipping_Contact_Name__c</field>
        <field>Expected_Receive_Date__c</field>
        <field>Name</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <description>Sends a request to director for approval</description>
        <label>Director Approval</label>
        <name>Director_Approval</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>brian.igoe@viewsonic.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Goes to VP of sales if Large format. There is an exception if VP Sales is the Director in Step 1</description>
        <entryCriteria>
            <formula>(($User.ManagerId == &apos;005A0000000TGUf&apos; || 
$User.Id == &apos;005A0000002lzcsIAA&apos; || 
$User.ManagerId == &apos;005A0000000TGUfIAO&apos; || 
$User.Id == &apos;005A0000002lzcs&apos;
|| $User.Alias = &apos;admin&apos; || $User.Alias == &apos;bcoll&apos;) &amp;&amp; $UserRole.Name != &apos;LA Sales TM&apos;) &amp;&amp;  Large_Format_Request__c == true</formula>
        </entryCriteria>
        <label>Large Format To VP of Sales</label>
        <name>Large_Format_To_VP_of_Sales</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>Sales Rep Eval request approval from director and then notifies operations sales</description>
    <emailTemplate>Product_Request/Sales_Rep_Evaluation_Request</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 AND 2 AND 3</booleanFilter>
        <criteriaItems>
            <field>User.UserRole</field>
            <operation>notEqual</operation>
            <value>ViewSonic Corporation Partner User</value>
        </criteriaItems>
        <criteriaItems>
            <field>Eval_Request__c.Approval_Status__c</field>
            <operation>notEqual</operation>
            <value>Approved</value>
        </criteriaItems>
        <criteriaItems>
            <field>Eval_Request__c.Eval_Type__c</field>
            <operation>equals</operation>
            <value>ViewSonic Sales Rep Eval</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Change_to_Approved_Status</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Eval_Approved_to_Sales_Rep</name>
            <type>Alert</type>
        </action>
        <action>
            <name>EvalProcessW_Shipping</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Notified_Sales_Opp</name>
            <type>Task</type>
        </action>
        <action>
            <name>Notifies_Sales_Ops</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Notifies_Sales_Opsactivity</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Unlocked_for_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Change_to_Rejected_Status</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Eval_Process_Submission</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Notifies_Sales_RepRejected</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Unlocked_for_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Approval_Process</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Change_to_Pending_Status</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Eval_End_UserRequest_Recieved</name>
            <type>Alert</type>
        </action>
        <action>
            <name>EvalProcessStage</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Locked_for_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Sales Rep Eval Request Approval</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>4</processOrder>
    <recallActions>
        <action>
            <name>Approval_Status_Blank</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Eval_Process_Submission</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Unlocked_for_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
