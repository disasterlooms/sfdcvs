<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Distributor__c</field>
        <field>Reseller__c</field>
        <field>End_User__c</field>
        <field>Product__c</field>
        <field>Quantity__c</field>
        <field>PO_Number__c</field>
        <field>Sales_Rep__c</field>
        <field>Spa__c</field>
        <field>Fulfilled_Qty__c</field>
        <field>Owner</field>
        <field>Name</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>updateStatusVP_Review</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <label>Submit to Manager</label>
        <name>Submit_to_Manager</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>brian.igoe@viewsonic.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <formula>(($User.ManagerId == &apos;005A0000000TGUf&apos; ||
$User.Id == &apos;005A0000002lzcsIAA&apos; ||
$User.ManagerId == &apos;005A0000000TGUfIAO&apos; ||
$User.Id == &apos;005A0000002lzcs&apos;
|| $User.Alias = &apos;admin&apos; || $User.Alias == &apos;bcoll&apos;))
&amp;&amp; $UserRole.Name != &apos;LA Sales TM&apos;
&amp;&amp; $UserRole.Name !=  &apos;LA Sales Director&apos;</formula>
        </entryCriteria>
        <label>VP of Sales</label>
        <name>VP_of_Sales</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>Request to send for Manager and VP of Sales approval to have Sales Admin hold allocation on inventory</description>
    <emailTemplate>SPA_Approval_Process/strategic_Allocation</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>isLocked__c</formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>isLocked_False</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Status_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Strategic_Allocation_Approval</name>
            <type>Alert</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>isLocked_False</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Strategic_Allocation_Rejection</name>
            <type>Alert</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>Strategic Allocation Request Submission</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>true</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>isLocked_False</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
