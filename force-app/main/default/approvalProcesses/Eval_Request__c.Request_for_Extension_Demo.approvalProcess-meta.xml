<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Opportunity_Name__c</field>
        <field>Eval_Type__c</field>
        <field>Reason_for_Request__c</field>
        <field>Special_Instructions__c</field>
        <field>Opportunity_Amount__c</field>
        <field>Product_Name__c</field>
        <field>Quantity__c</field>
        <field>Billing_Contact_Name__c</field>
        <field>Shipping_Contact_Name__c</field>
        <field>Expected_Receive_Date__c</field>
        <field>Name</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <description>Sends a request to director for approval</description>
        <label>Director Approval</label>
        <name>Director_Approval</name>
    </approvalStep>
    <description>Request for extension for return. Get 60 days on approval.</description>
    <emailTemplate>Product_Request/Eval_Extension_End_User</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>User.UserRole</field>
            <operation>notEqual</operation>
            <value>ViewSonic Corporation Partner User</value>
        </criteriaItems>
        <criteriaItems>
            <field>Eval_Request__c.Approval_Status__c</field>
            <operation>equals</operation>
            <value>Approved</value>
        </criteriaItems>
        <criteriaItems>
            <field>Eval_Request__c.Eval_Type__c</field>
            <operation>equals</operation>
            <value>Reseller Demo</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Change_to_Approved_Status</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Reason_for_Extension_Clear</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Status_Outstandnig</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Unlocked_for_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Change_to_Approved_Status</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Unlocked_for_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Change_to_Pending_Status</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Locked_for_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Request for Extension Demo 60 Days</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>9</processOrder>
    <recallActions>
        <action>
            <name>Unlocked_for_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
