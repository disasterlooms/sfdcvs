<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>jason.orbison@viewsonic.com</submitter>
        <type>user</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>viewsonic_bid_desk@viewsonic.com</submitter>
        <type>user</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>End_User_Lookup_Account__c</field>
        <field>Partner_Account_Search__c</field>
        <field>Amount</field>
        <field>List_of_Work_Activity__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>viewsonic_bid_desk@viewsonic.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Bid Desk to review and verify that there is not another bid reg deal for customer and that the required pre-requisites are entered.</description>
        <label>Bid Desk QA Check</label>
        <name>Bid_Desk_QA_Check</name>
        <rejectionActions>
            <action>
                <name>Bid_Desk_Rejected_Bid_Registration</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>brian.igoe@viewsonic.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Send Approval to VP of Sales</description>
        <label>VP Sales Approval</label>
        <name>VP_Sales_Approval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>Bid_Desk_Rejected_Bid_Registration</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>Process set by &apos;Spa Request Field&apos; to request the spa be a bid registered deal. Fields controlled by VF Page</description>
    <emailTemplate>SPA_Approval_Process/BidRegVF</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>isblank(Id)</formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Bid_Registered_Approved</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Bid_Registered_is_True</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Bid_Registered_Deal_Admin</name>
            <type>Alert</type>
        </action>
    </initialSubmissionActions>
    <label>Bid Registered Request BD</label>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>Bid_Registration_Recall</name>
            <type>Alert</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
