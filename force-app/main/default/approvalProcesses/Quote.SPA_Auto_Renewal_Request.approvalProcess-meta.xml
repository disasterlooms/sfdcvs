<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>All_VSA</submitter>
        <type>group</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>Sales_Ops</submitter>
        <type>group</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>SalesDirectors</submitter>
        <type>group</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>jason.orbison@viewsonic.com</submitter>
        <type>user</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>viewsonic_bid_desk@viewsonic.com</submitter>
        <type>user</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>vsa-it@viewsonic.com</submitter>
        <type>user</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Reason_For_Renewal__c</field>
        <field>Account</field>
        <field>Opportunity_Amount__c</field>
        <field>Resellers__c</field>
        <field>List_of_Work_Activity_c__c</field>
        <field>Scope_of_Bid_Registration__c</field>
        <field>Spa_Request_Submitter__c</field>
        <field>Business_Reason_for_Bid_Registration__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <label>Directors Approval</label>
        <name>Directors_Approval</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>viewsonic_bid_desk@viewsonic.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Bid Desk QA</label>
        <name>Bid_Desk_QA</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <emailTemplate>SPA_Approval_Process/Spa_AR_VF</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Quote.Auto_Renew__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>AR_true</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Locked_False</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>SPA_Auto_Renewal_Approval</name>
            <type>Alert</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>AR_false</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>AR_Rejected_Sales</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Locked_False</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>SPA_AR_Bid_Desk_Rejections</name>
            <type>Alert</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Keep_record_unlocked</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>SPA Auto Renewal Request</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>3</processOrder>
    <recallActions>
        <action>
            <name>AR_false</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Locked_False</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
