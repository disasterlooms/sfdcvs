<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Opportunity_Name__c</field>
        <field>Eval_Type__c</field>
        <field>Reason_for_Request__c</field>
        <field>Special_Instructions__c</field>
        <field>Opportunity_Amount__c</field>
        <field>Product_Name__c</field>
        <field>Quantity__c</field>
        <field>Billing_Contact_Name__c</field>
        <field>Shipping_Contact_Name__c</field>
        <field>Expected_Receive_Date__c</field>
        <field>Name</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <description>Sends a request to director for approval</description>
        <label>VP Approval</label>
        <name>VP_Approval</name>
        <rejectionActions>
            <action>
                <name>Notifies_Sales_Rep</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>Eval request approval from VP and then notifies operations sales</description>
    <emailTemplate>Product_Request/Eval_Request</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 AND (2 OR 3 OR 4)</booleanFilter>
        <criteriaItems>
            <field>User.UserRole</field>
            <operation>notEqual</operation>
            <value>ViewSonic Corporation Partner User</value>
        </criteriaItems>
        <criteriaItems>
            <field>Eval_Request__c.Products__c</field>
            <operation>contains</operation>
            <value>CDE7060T</value>
        </criteriaItems>
        <criteriaItems>
            <field>Eval_Request__c.Products__c</field>
            <operation>contains</operation>
            <value>CDE8451-TL</value>
        </criteriaItems>
        <criteriaItems>
            <field>Eval_Request__c.Products__c</field>
            <operation>contains</operation>
            <value>CDP9800</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Change_to_Approved_Status</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Notifies_Sales_Ops</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Notifies_Sales_Opsactivity</name>
            <type>Alert</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Change_to_Rejected_Status</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Change_to_Pending_Status</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Eval Request VP Special Approval Process</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Eval_Special_Approval__c</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>6</processOrder>
    <recallActions>
        <action>
            <name>Change_to_Cancelled_Status</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
