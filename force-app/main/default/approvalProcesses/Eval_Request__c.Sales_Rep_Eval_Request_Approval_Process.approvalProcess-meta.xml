<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Opportunity_Name__c</field>
        <field>Eval_Type__c</field>
        <field>Reason_for_Request__c</field>
        <field>Special_Instructions__c</field>
        <field>Opportunity_Amount__c</field>
        <field>Product_Name__c</field>
        <field>Quantity__c</field>
        <field>Billing_Contact_Name__c</field>
        <field>Shipping_Contact_Name__c</field>
        <field>Expected_Receive_Date__c</field>
        <field>Name</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <description>Sends a request to director for approval</description>
        <label>Director Approval</label>
        <name>Director_Approval</name>
        <rejectionActions>
            <action>
                <name>Notifies_Sales_Rep</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>Sales Rep Eval request approval from director and then notifies operations sales</description>
    <emailTemplate>Product_Request/Sales_Rep_Evaluation_Request</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 AND 2 AND 3</booleanFilter>
        <criteriaItems>
            <field>User.UserRole</field>
            <operation>notEqual</operation>
            <value>ViewSonic Corporation Partner User</value>
        </criteriaItems>
        <criteriaItems>
            <field>Eval_Request__c.Approval_Status__c</field>
            <operation>notEqual</operation>
            <value>Approved</value>
        </criteriaItems>
        <criteriaItems>
            <field>Eval_Request__c.Eval_Type__c</field>
            <operation>equals</operation>
            <value>ViewSonic Sales Rep Eval</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Change_to_Approved_Status</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Eval_Approved_to_Sales_Rep</name>
            <type>Alert</type>
        </action>
        <action>
            <name>EvalProcessW_Shipping</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Notified_Sales_Opp</name>
            <type>Task</type>
        </action>
        <action>
            <name>Notifies_Sales_Ops</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Notifies_Sales_Opsactivity</name>
            <type>Alert</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Change_to_Rejected_Status</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Change_to_Pending_Status</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Eval_End_UserRequest_Recieved</name>
            <type>Alert</type>
        </action>
        <action>
            <name>EvalProcessStage</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Sales Rep Eval Request Approval Process</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>7</processOrder>
    <recallActions>
        <action>
            <name>Approval_Status_Blank</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Eval_Process_Submission</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
