<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>All_VSA</submitter>
        <type>group</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Opportunity_Name__c</field>
        <field>Eval_Type__c</field>
        <field>Reason_for_Request__c</field>
        <field>Special_Instructions__c</field>
        <field>Opportunity_Amount__c</field>
        <field>Product_Name__c</field>
        <field>Quantity__c</field>
        <field>Billing_Contact_Name__c</field>
        <field>Shipping_Contact_Name__c</field>
        <field>Expected_Receive_Date__c</field>
        <field>Name</field>
        <field>Write_Off_Reason__c</field>
        <field>Reason_for_Write_Off__c</field>
        <field>Business_Case_Write_Off__c</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <description>Approval Director first step</description>
        <label>Director Approval</label>
        <name>Director_Approval</name>
        <rejectionActions>
            <action>
                <name>Notifies_Sales_Rep</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>brian.igoe@viewsonic.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>to VP of sales for write off approval</description>
        <entryCriteria>
            <formula>$UserRole.Name != &apos;VSA VP Sales&apos;
&amp;&amp; (text($User.VS_Sub_Region__c) == &apos;VSA US&apos; ||
text($User.VS_Sub_Region__c) == &apos;VSA CAN&apos;)</formula>
        </entryCriteria>
        <label>VP Sales Approval</label>
        <name>VP_Sales_Approval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>Post approavl Write Off Eval request approval from director and then notifies operations sales</description>
    <emailTemplate>Product_Request/Write_Off_Post_Approval_Req</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>$UserRole.Name  != &apos;ViewSonic Corporation Partner User&apos; &amp;&amp;
text(Approval_Status__c) == &apos;Approved&apos; &amp;&amp;  not(isblank( Business_Case_Write_Off__c ))</formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Change_to_Approved_Status</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Eval_Process_Post_Approval</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Notify_the_Evaluation_Team_Sales_Admin</name>
            <type>Alert</type>
        </action>
        <action>
            <name>PAWR_Eval_Approved_to_Sales_Rep</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Unlocked_for_Approval</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Write_Off_Date_Eval</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Written_Off</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Change_to_Rejected_Status</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Rejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Unlocked_for_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Change_to_Pending_Status</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Eval_Process_Post_Approval</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Locked_for_Approval</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PAWR_Eval_Approved_to_Sales_Rep</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Write_Off_Date_Eval</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Post App Write Off Eval Approval Process</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>5</processOrder>
    <recallActions>
        <action>
            <name>Change_to_Approved_Status</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Unlocked_for_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
