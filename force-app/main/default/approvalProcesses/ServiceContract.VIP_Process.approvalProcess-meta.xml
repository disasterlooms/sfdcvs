<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>allInternalUsers</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Account</field>
        <field>POSCY__c</field>
        <field>POSPY__c</field>
        <field>Owner</field>
        <field>Name</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <description>Go to manager for Review</description>
        <label>VIP Manager</label>
        <name>VIP_Manager</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>brian.igoe@viewsonic.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>sally.wang@viewsonic.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>Unanimous</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>ServiceContract.Service_Type__c</field>
                <operation>equals</operation>
                <value>VIP Platinum</value>
            </criteriaItems>
        </entryCriteria>
        <label>VP Approval</label>
        <name>VP_Approval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <emailTemplate>Accounts/VIPApprovalRequest</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>ServiceContract.Status</field>
            <operation>notEqual</operation>
            <value>Active,Expired</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>ActivationDate</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>ApprovedStatus</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>EndDate</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>StartDate</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>unLockedApproval</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>VIP_Approved</name>
            <type>Alert</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>declined</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>StatusDenied</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>unLockedApproval</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>VIPRejection</name>
            <type>Alert</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>inApproval</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>LockedApproval</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>VIP Process</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>StatusDraft</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>unLockedApproval</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
