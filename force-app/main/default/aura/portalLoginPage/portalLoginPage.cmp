                        <aura:if isTrue="{!v.isLogin}">
                            <h1>{!$Label.c.Login_Title}</h1>
                            <aura:set attribute="else">
                                <aura:if isTrue="{!v.isPasswordReset}">
                                    <h1>{!$Label.c.Password_Reset_Title}</h1>
                                    <aura:set attribute="else">
                                        <h1> {!$Label.c.Sign_Up}</h1>
                                    </aura:set>

                                </aura:if>
                            </aura:set>

                        </aura:if>
                        <div>
                            <!-- The dynamic field below can have the css edited in this component but the class names cannot change, must add to the stlye sheet
