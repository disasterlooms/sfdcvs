<aura:component controller ="spabrController" implements="flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,force:lightningQuickAction" access="global" >
    <aura:attribute name="recordId" type="String" /> 
    <aura:attribute name="bidregd" type="String" />
    <aura:attribute name="inactive" type="boolean" /> 
    <aura:attribute name="flag" type="boolean" default="false"/>
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" /> 
    <aura:if isTrue="{!v.flag}">
        <aura:if isTrue="{!v.inactive}" >
            <center style="color:red">This SPA is Inactive</center> 
            <aura:set attribute="else">
                
                <aura:if isTrue="{!v.bidregd}">
                    <center style="color:red">This SPA is locked for BR Approval</center> 
                    
                    <aura:set attribute="else">
                        <lightning:button label="Bid Register" variant="Neutral" onclick="{!c.invokeflow}" /> 
                        <!--
                <lightning:button label="Bid Register 2.0" variant="Neutral" onclick="{!c.editBR}" /> 
                -->
                        
                    </aura:set>
                </aura:if>
            </aura:set>
        </aura:if>
    </aura:if>
</aura:component>