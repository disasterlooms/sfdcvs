<aura:component implements="flexipage:availableForRecordHome,force:hasRecordId,force:lightningQuickAction" access="global" >
	<aura:attribute name="disabled" type="Boolean" default="false" />
    <aura:attribute name="recordId" type="String"/>
    <aura:if isTrue="{!$Browser.isPhone}">
    <lightning:card title="Resubmission Notes">
        
    <lightning:recordEditForm
            onload="{!c.handleLoad}"
            onsubmit="{!c.handleSubmit}"
            onsuccess="{!c.handleSuccess}"
            recordId="{!v.recordId}"
            objectApiName="Quote"
            aura:id="brrecord">
            <!-- the messages component is for error messages -->
            <lightning:messages /> 
            <lightning:inputField fieldName="Resubmission_Notes__c" />
            <lightning:outputfield fieldName="Name" />
            <lightning:outputfield fieldName="OpportunityName__c" /> 
            <div class="slds-m-top_medium">
                <lightning:button variant="brand" type="submit" name="save" label="Save" disabled="{!v.disabled}"/>
            </div>
        </lightning:recordEditForm>
        
        
    </lightning:card>
    <aura:set attribute="else">
      This is only available on Mobile Devices. Please use the opportunity resubmission notes
    </aura:set>
  </aura:if> 

</aura:component>