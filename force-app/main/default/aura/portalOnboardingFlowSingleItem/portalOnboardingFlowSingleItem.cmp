<aura:component implements="forceCommunity:availableForAllPageTypes" access="global" >
    <aura:handler name="init" value="{!this}" action="{!c.init}"/>
    <aura:attribute name="stepDescription" type="String"/>
    <aura:attribute name="tskName" type="String"/>
     <aura:attribute name="step" type="Integer"/>
    <aura:attribute name="taskObj" type="PortalOnboardingProgress__c"/>
    
    
        <div class="pp-task-cont">
            <div class="pp-task-left">
                <div class="pp-task-title">
                    <div>{!$Label.c.pp_OnboardingTaskTskLabel}: {!v.step+1}</div>
                </div>
                <div class="pp-task-desc">{!v.taskObj.Partner_Portal_Task__r.Step_Description__c}</div>                            
            </div>
            <div class="pp-task-right">    
                <div class="forceCommunityFlowCommunity">                    
                    <lightning:flow aura:id="flowData"/>
                </div>
            </div>
        </div>
