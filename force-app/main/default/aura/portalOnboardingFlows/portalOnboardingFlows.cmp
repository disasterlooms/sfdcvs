<aura:component implements="forceCommunity:availableForAllPageTypes" access="global" 
                    controller="portalOnboardinggetTasks">
        <aura:handler name="init" value="{!this}" action="{!c.init}"/>
        <aura:attribute type="PortalOnboardingProgress__c[]" name="tasks"/>
        <aura:attribute type="String" name="header" default="onboarding"/>
        <div class="pp-onboard">
            <h1>{!$Label.c.pp_onboardingTasks_header}</h1>
        </div>
        <div class="pp-onboard-cont">
            <aura:iteration items="{!v.tasks}" var="t" indexVar="i">
                <c:portalOnboardingFlowSingleItem 
                   taskObj="{!t}"
                   step="{!i}"/>
            </aura:iteration>
        </div>        
    </aura:component>