<aura:component >
    
    <aura:attribute name="name" type="string"/>
    <aura:attribute name="id" type="string"/>
    <aura:attribute name="issortfield" type="boolean"/>
    <aura:attribute name="sortdirection" type="string"/>
    <aura:attribute name="direction" type="string"/>

    <aura:attribute name="SortOrder" type="String" default="A" />
    <aura:attribute name="isSorted" type="Boolean" default="False" />
    <aura:attribute name="isSortedA" type="Boolean" default="False" />
    <aura:attribute name="isSortedD" type="Boolean" default="False" />

    
    <a class="slds-th__action slds-text-link_reset" href="javascript:void(0);" role="button" tabindex="0">
        <span class="slds-assistive-text">Sort by: </span>
        <div class="slds-grid slds-grid_vertical-align-center slds-has-flexi-truncate">
            <span class="slds-truncate" title="Name">{!v.name}</span>
           <aura:if isTrue="{!v.issortfield}">
            <span class="slds-icon_container">  
                &nbsp;&nbsp;<lightning:button iconName="{!v.sortdirection}" iconPosition="left" variant="base"/>
            </span>
            </aura:if>
        </div>
    </a>
    <span class="slds-assistive-text" aria-live="assertive" aria-atomic="true">Sorted descending</span>
    <div class="slds-resizable">
        <input type="range" aria-label="Name column width" class="slds-resizable__input slds-assistive-text" id="cell-resize-handle-1086" max="1000" min="20" tabindex="0" />
        <span class="slds-resizable__handle">
            <span class="slds-resizable__divider"></span>
        </span>
    </div>    
    
</aura:component>