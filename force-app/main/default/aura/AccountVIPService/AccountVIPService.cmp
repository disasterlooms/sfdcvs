<aura:component implements="flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,force:lightningQuickActionWithoutHeader"
                 controller="AccountVIPService"
                access="global" >
    <aura:attribute name="recordId" type="string" />
    <aura:attribute name="account" type="Account" />
    <aura:handler name="init" action="{!c.myAction}" value="{!this}" />
    <aura:attribute name="disabled" type="Boolean" default="true" />
    <aura:attribute name="vip" type="String" />
    <aura:attribute name="reason" type="String" />
    <aura:attribute name="reseller" type="String" />
    <aura:attribute name="status" type="String" />
    <aura:attribute name="buttonlabel" type="String" default="Save"/>
    
    
    <div class="exampleHolder">
        <lightning:spinner aura:id="mySpinner" class="slds-hide" variant="brand" size="large"/>
    </div>
     <lightning:recordEditForm
                                      onload="{!c.handleLoad}"
                                      onsubmit="{!c.handleSubmit}"
                                      onsuccess="{!c.handleSuccess}"
                                      recordId="{!v.recordId}"
                                      objectApiName="Account">
                <!-- the messages component is for error messages -->
                <lightning:messages />            
                <lightning:inputField fieldName="VIP_Request_Type__c" required="true" onchange="{!c.validate}" value="{!v.vip}"/>
         		<lightning:inputField fieldName="Primary_Reseller_VIP__c" onchange="{!c.validate}" value="{!v.reseller}"/>
                <lightning:inputField fieldName="VIP_Service_Reason_for_Request__c" onchange="{!c.validate}" value="{!v.reason}"/>
                <div class="slds-m-top_medium">
                    
                </div>
                <footer class="slds-modal__footer">
                    <lightning:button variant="neutral" type="submit" name="cancel" label="Cancel" onclick="{! c.cancel}"/>
                    <lightning:button  disabled="{!v.disabled}" variant="brand" type="submit" name="save" label="{!v.buttonlabel}" />
                </footer>
            </lightning:recordEditForm> 
       
</aura:component>