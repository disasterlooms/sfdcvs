<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>BillingStateNull_US</fullName>
    <active>true</active>
    <errorConditionFormula>isnew() &amp;&amp;
isblank(text(BillingStateCode)) &amp;&amp;
(BillingCountry == &apos;United States&apos; || BillingCountry == &apos;Canada&apos;)</errorConditionFormula>
    <errorMessage>Must have a Billing State/Province for US and Canada accounts to create account</errorMessage>
</ValidationRule>
