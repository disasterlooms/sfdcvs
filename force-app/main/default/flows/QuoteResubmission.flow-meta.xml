                <booleanValue>false</booleanValue>
            </value>
        </filters>
        <object>Quote</object>
        <outputAssignments>
            <assignToReference>quoteid</assignToReference>
            <field>Id</field>
        </outputAssignments>
        <outputAssignments>
            <assignToReference>notes</assignToReference>
            <field>Resubmission_Notes__c</field>
