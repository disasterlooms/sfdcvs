<apex:page standardController="Eval_Request__c" extensions="ItemEditController" showheader="true" sidebar="true" lightningStylesheets="true">  
  <apex:sectionHeader title="{!Eval_Request__c.Name}" subtitle="Edit Evaluation Requests" />
  <apex:slds >
  <apex:form >
    <apex:pageBlock mode="edit" id="block">

      <apex:pageBlockButtons location="both">
       <apex:commandButton value="Refresh List" action="{!search}" rerender="block" status="Search"/>
       <apex:commandButton action="{!save}" value="Save Records"/>
        <apex:commandButton action="{!cancel}" value="Cancel"/>
      </apex:pageBlockButtons>
       <apex:pageBlockSection >
        <apex:pageBlockSectionItem >
          <apex:outputLabel for="searchText">Type RMA and Search to edit all Products</apex:outputLabel>
          <apex:panelGroup >
          <apex:inputText id="searchText" value="{!searchText}"/>
          <apex:commandButton value="Search" action="{!search}" rerender="block" status="status"/>
          </apex:panelGroup>
        </apex:pageBlockSectionItem>
      </apex:pageBlockSection><br/>

      <apex:actionStatus id="status" startText="Searching... please wait..."/>
 <apex:pageBlockSection title="Results" id="resultsBlock" columns="1">
        <apex:pageBlockTable value="{!searchResults}" var="item" rendered="{!NOT(ISNULL(searchResults))}">
        
          <apex:column value="{!item.Name}" headerValue="Name" width="100"/>
          <apex:column headerValue="RMA" width="200">
            <apex:inputField value="{!item.RMA__c}"/>
          </apex:column>
            <apex:column headerValue="Status" width="200">
            <apex:inputField value="{!item.Status__c}"/>
          </apex:column>
            <apex:column headerValue="Write off Reason" width="200">
            <apex:inputField value="{!item.Write_off_Reason__c}"/>
          </apex:column>
        </apex:pageBlockTable>
      </apex:pageBlockSection>
    </apex:pageBlock>
   
  </apex:form>
   </apex:slds>
</apex:page>