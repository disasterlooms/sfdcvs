<apex:page standardController="Quote">

<table border="0" >
                 <tr > 
                     <th>ViewSonic SKU</th><th>Quantity</th><th>Approval Date</th><th>Expiration Date</th><th>Bundle Info (if applicable)</th>
                  </tr>
<apex:repeat var="prod" value="{!Quote.QuoteLineItems}">
       <tr align="right">
            <td align="left">{!prod.Product2.Name}</td>
            <td><apex:outputText ><apex:param value="{!prod.Quantity}" /></apex:outputText></td>
            <td><apex:outputText value="{0, date, MM'/'dd'/'yy}"><apex:param value="{!prod.SPA_Approval_Date__c}" /></apex:outputText></td>
            <td><apex:outputText value="{0, date, MM'/'dd'/'yy}"><apex:param value="{!prod.SPA_Expiration_Date__c}" /></apex:outputText></td>
            <td align="left">{!if(prod.Product2.Bundle__c == true, prod.Product2.Description,"")}</td>
        </tr>

 </apex:repeat> 
 </table>
</apex:page>