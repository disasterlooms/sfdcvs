            <!-- **********   [Record Type : Master ]   **********  -->
            <apex:pageblock title="test" mode="edit"  >
            <apex:repeat value="{!Campaign.CampaignMembers}" id="theRepeat">

        <apex:outputText value="{!Campaign}" id="theValue"/><br/>

    </apex:repeat>
   </apex:pageblock>         
            <apex:outputpanel >
                <apex:pageblocksection title="Campaign Information" showheader="false" collapsible="false" columns="2">
                    <apex:pageblocksectionitem >
                        <apex:outputlabel value="Campaign Owner"/>
                            <apex:outputpanel >
                            <apex:outputfield value="{!Campaign.OwnerId}"/>
                            <apex:outputlink value="{!URLFOR($Action.Campaign.ChangeOwner,Campaign.id)}" rendered="{!NOT(ISNULL(Campaign.Id))}">[Change]</apex:outputlink>
                        </apex:outputpanel>
                    </apex:pageblocksectionitem>
                    <apex:outputfield value="{!Campaign.Status}"/>
                    <apex:outputfield value="{!Campaign.Name}"/>
                    <apex:pageblocksectionitem />
                    <apex:outputfield value="{!Campaign.IsActive}"/>
                    <apex:pageblocksectionitem />
                    <apex:outputfield value="{!Campaign.Type}"/>
                    <apex:pageblocksectionitem />
                    <apex:outputfield value="{!Campaign.ParentId}"/>
                    <apex:pageblocksectionitem />
                    <apex:outputfield value="{!Campaign.Campaign_Landing_Page_URL__c}"/>
                    <apex:pageblocksectionitem />
                </apex:pageblocksection>
                <apex:pageblocksection title="Description Information" showheader="false" collapsible="false" columns="1">
                    <apex:outputfield value="{!Campaign.Description}"/>
                </apex:pageblocksection>
                <apex:pageblocksection title="Planning" showheader="true" collapsible="true" columns="2">
                    <apex:outputfield value="{!Campaign.StartDate}"/>
                    <apex:outputfield value="{!Campaign.ExpectedRevenue}"/>
                    <apex:outputfield value="{!Campaign.EndDate}"/>
                    <apex:outputfield value="{!Campaign.BudgetedCost}"/>
                    <apex:outputfield value="{!Campaign.NumberSent}"/>
                    <apex:outputfield value="{!Campaign.ActualCost}"/>
                    <apex:outputfield value="{!Campaign.ExpectedResponse}"/>
                    <apex:pageblocksectionitem />
                </apex:pageblocksection>
                <apex:pageblocksection title="Campaign Parent Statistics" showheader="true" collapsible="true" columns="2">
                    <apex:outputfield value="{!Campaign.HierarchyNumberOfContacts}"/>
                    <apex:outputfield value="{!Campaign.HierarchyExpectedRevenue}"/>
                    <apex:outputfield value="{!Campaign.HierarchyNumberOfLeads}"/>
                    <apex:outputfield value="{!Campaign.HierarchyActualCost}"/>
                    <apex:outputfield value="{!Campaign.HierarchyNumberOfResponses}"/>
                    <apex:outputfield value="{!Campaign.HierarchyAmountAllOpportunities}"/>
                    <apex:outputfield value="{!Campaign.HierarchyNumberOfConvertedLeads}"/>
                    <apex:outputfield value="{!Campaign.HierarchyAmountWonOpportunities}"/>
                    <apex:outputfield value="{!Campaign.HierarchyNumberOfOpportunities}"/>
                    <apex:outputfield value="{!Campaign.HierarchyNumberOfWonOpportunities}"/>
                </apex:pageblocksection>
                <apex:pageblocksection title="Campaign Statistics" showheader="true" collapsible="true" columns="2">
                    <apex:outputfield value="{!Campaign.NumberOfResponses}"/>
                    <apex:outputfield value="{!Campaign.NumberOfOpportunities}"/>
                    <apex:outputfield value="{!Campaign.NumberOfLeads}"/>
                    <apex:outputfield value="{!Campaign.NumberOfWonOpportunities}"/>
                    <apex:outputfield value="{!Campaign.NumberOfConvertedLeads}"/>
                    <apex:outputfield value="{!Campaign.AmountAllOpportunities}"/>
                    <apex:outputfield value="{!Campaign.NumberOfContacts}"/>
                    <apex:outputfield value="{!Campaign.AmountWonOpportunities}"/>
                </apex:pageblocksection>
                <apex:pageblocksection title="System Information" showheader="false" collapsible="false" columns="2">
                    <apex:pageblocksectionitem >
                        <apex:outputlabel value="Created By"/>
                        <apex:outputpanel >
                            <apex:outputfield value="{!Campaign.CreatedById}"/>&nbsp;, 
                            <apex:outputfield value="{!Campaign.CreatedDate}"/>
                        </apex:outputpanel>
                    </apex:pageblocksectionitem>
                    <apex:pageblocksectionitem >
                        <apex:outputlabel value="Last Modified By"/>
                        <apex:outputpanel >
                            <apex:outputfield value="{!Campaign.LastModifiedById}"/>&nbsp;, 
                            <apex:outputfield value="{!Campaign.LastModifiedDate}"/>
                        </apex:outputpanel>
                    </apex:pageblocksectionitem>
                </apex:pageblocksection>
            </apex:outputpanel>
        </apex:pageblock>
    </apex:form>
<apex:relatedlist list="CampaignMembers" />
    <!-- **********   [Related Lists for Record Type : Master ]   **********  -->
    <apex:outputpanel >
        <apex:relatedlist list="ChildCampaigns" title="Campaign Hierarchy"/>
        <apex:relatedlist list="OpenActivities" title="Open Activities"/>
        <apex:relatedlist list="ActivityHistories" title="Activity History"/>
        <apex:relatedlist list="Opportunities" title="Opportunities"/>
        <apex:relatedlist list="CombinedAttachments" title="Attachments"/>
        
        <apex:relatedlist list="Opportunities__r" title="Opportunities"/>
    </apex:outputpanel>
   
</apex:page>